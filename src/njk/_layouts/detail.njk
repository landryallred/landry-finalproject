{% extends '_layouts/base.njk' %}

{% block content %}
<div class="container">
<h1>{{ members.name }}</h1>
  <div class="row">
    <div class="col-sm-4">
       <div class="members-photo text-center">
         <img src="img/members/{{members.slug}}-color.jpg" alt="{{members.name}}" class="img-fluid">
        </div>
    </div>
    <div class="col col-members bg-dark text-light">
      <h2> Bio </h2>
        <dl class="bio">
          <dt> Instruments: </dt>
          <dd> {{members.instruments}} </dd>
          <dt> Tenure: </dt>
          <dd> {{ members.tenure }} </dd>
          <dt> Birthplace: </dd>
          <dd> {{ members.birthplace }} </dd>
          <dt> Birthdate: </dt>
          <dd> {{ members.birthdate }} </dd>
        </dl>
    </div>
  </div>
  <div class="row">
    <div class="col col-narrative bg-secondary">
      <h2> Narrative </h2>
        <article> {{ members.text | safe }} </article>
    </div>
  </div>
</div>
{% endblock %} 
